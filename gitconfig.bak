# This is Git's per-user configuration file.
[user]
# Please adapt and uncomment the following lines:
	name = LavaWong
	email = lazy.false@gmail.com
[core]
    excludesfile = *.swp
	excludesfile = $HOME/.gitignore_global
[diff]
    tool = sourcetree
[difftool "sourcetree"]
	cmd = "vimdiff "
	path = 
[mergetool "sourcetree"]
	cmd = " "
	trustExitCode = true
[branch]
    autosetuprebase = always
[push]
    default = tracking
[color]
    status = auto
    branch = auto
    diff = auto
    ui = true
    pager = true
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
#[color "diff"]
#    meta = yellow bold
#    frag = magenta bold
#    old = red bold
#    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[alias]
    lg = log --color --graph --pretty
    st = status
    co = checkout
    br = branch
    ci = commit
    undoadd = rm --cached
[branch "master"]
    remote = origin
    merge = refs/heads/master
[remote "origin"]
	push = HEAD
